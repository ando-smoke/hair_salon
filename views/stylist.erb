<div class="page-heading">
  <h1>Add a client to <em class="em-special"><%= @stylist.first_name() + " " +
    @stylist.last_name() %></em>
  </h1>
</div><br />

<form action="/clients" method="post">
  <input id="stylist_id" name="stylist_id" type="hidden" value="<%= @stylist.id() %>" />

  <div class="form-group">
    <label for="first_name">Client first name: </label>
    <input id="first_name" name="first_name" type="text" class="form-control"/>
  </div>
  <div class="form-group">
    <label for="last_name">Client last name: </label>
    <input id="last_name" name="last_name" type="text" class="form-control"/>
  </div>
  <button type="submit" class="btn">Add client</button>
</form><br />

<% if @stylist.all_clients().any?() %>
  <h3>Current client list:</h3>
  <ul>
    <% @stylist.all_clients().each() do |client| %>
      <li>
        <em><%= client.last_name() %>, <%= client.first_name() %></em>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>There are no clients yet!</p>
<% end %>
<br />
<a href="/">Return to Main Page</a>
